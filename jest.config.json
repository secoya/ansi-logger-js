{
    "globals": {
        "ts-jest": {
            "tsConfigFile": "tsconfig.test.json"
        }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
        "js",
        "ts"
    ],
    "testMatch": [
        "**/__tests__/*.ts"
    ],
    "transform": {
        ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
}
